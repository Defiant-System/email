<MenuBar>
	<Menu name="Mail">
		<Menu name="About Mail" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Mail" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>

	<Menu for="new-mail-fields">
		<Menu name="Cc Address Field" click="toggle-field" arg="cc" check-group="toggle-field-cc"/>
		<Menu name="Bcc Address Field" click="toggle-field" arg="bcc" check-group="toggle-field-bcc"/>
		<Menu name="Reply-to Address Field" click="toggle-field" arg="reply-to" check-group="toggle-field-reply-to"/>
		<Menu name="Priority Field" click="toggle-field" arg="priority" check-group="toggle-field-priority"/>
	</Menu>
</MenuBar>